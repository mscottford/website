{
  "name": "mscottford-website",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "predev": "pnpm run build:favicons && pnpm run copy:images",
    "dev": "next dev",
    "prebuild": "pnpm run build:favicons && pnpm run copy:images",
    "build": "next build",
    "build:favicons": "ts-node --esm ./scripts/generate-favicons/index.ts",
    "copy:images": "ts-node --esm ./scripts/copy-post-images.ts",
    "generate:redirects": "ts-node --esm ./scripts/generate-s3-redirects.ts",
    "test:redirects": "ts-node --esm ./scripts/test-redirects.ts",
    "test:rss": "ts-node --esm ./scripts/test-rss-feed.ts",
    "deploy:init:bootstrap": "cd deploy/terraform/bootstrap && tofu init",
    "deploy:bootstrap": "pnpm deploy:init:bootstrap && cd deploy/terraform/bootstrap && tofu apply -auto-approve",
    "deploy:plan:bootstrap": "pnpm deploy:init:bootstrap && cd deploy/terraform/bootstrap && tofu plan",
    "deploy:build:staging": "NEXT_PUBLIC_SITE_URL=https://staging.mscottford.com pnpm build",
    "deploy:build:production": "NEXT_PUBLIC_SITE_URL=https://mscottford.com pnpm build",
    "deploy:init:staging": "cd deploy/terraform && tofu init -backend-config=\"key=staging/terraform.tfstate\" -reconfigure",
    "deploy:init:production": "cd deploy/terraform && tofu init -backend-config=\"key=production/terraform.tfstate\" -reconfigure",
    "deploy:terraform:staging": "pnpm deploy:init:staging && cd deploy/terraform && tofu apply -var-file=staging.tfvars -auto-approve",
    "deploy:terraform:production": "pnpm deploy:init:production && cd deploy/terraform && tofu apply -var-file=production.tfvars -auto-approve",
    "deploy:plan:staging": "pnpm deploy:init:staging && cd deploy/terraform && tofu plan -var-file=staging.tfvars",
    "deploy:plan:production": "pnpm deploy:init:production && cd deploy/terraform && tofu plan -var-file=production.tfvars",
    "deploy:staging": "pnpm deploy:bootstrap && pnpm deploy:build:staging && pnpm generate:redirects && pnpm deploy:terraform:staging",
    "deploy:production": "pnpm deploy:bootstrap && pnpm deploy:build:production && pnpm generate:redirects && pnpm deploy:terraform:production",
    "rollback:staging": "ts-node --esm ./scripts/rollback-deployment.ts mscottford.com-staging",
    "rollback:production": "ts-node --esm ./scripts/rollback-deployment.ts mscottford.com-production",
    "logs:staging": "ts-node --esm ./scripts/tail-access-logs.ts mscottford.com-staging-logs",
    "logs:production": "ts-node --esm ./scripts/tail-access-logs.ts mscottford.com-production-logs",
    "prestart": "pnpm run build:favicons",
    "start": "pnpm dlx serve@latest out",
    "lint": "next lint",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "browserslist": "defaults, not ie <= 11",
  "dependencies": {
    "@headlessui/react": "^2.2.6",
    "@mapbox/rehype-prism": "^0.9.0",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15",
    "@tailwindcss/postcss": "^4.1.15",
    "@tailwindcss/typography": "^0.5.16",
    "@types/mdast": "^4.0.4",
    "@types/webpack-env": "^1.18.8",
    "cheerio": "^1.1.2",
    "clsx": "^2.1.1",
    "fast-glob": "^3.3.3",
    "feed": "^5.1.0",
    "next": "^15",
    "next-themes": "^0.4.6",
    "react": "^19",
    "react-dom": "^19",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^4.1.15",
    "typescript": "^5.8.3",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^5.0.0",
    "@content-collections/core": "^0.13.0",
    "@content-collections/next": "^0.2.10",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-onboarding": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/nextjs-vite": "^10.1.11",
    "@types/mdx": "^2.0.13",
    "@types/node": "^24.1.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/turndown": "^5.0.6",
    "chromatic": "^13.3.5",
    "eslint": "^9.32.0",
    "eslint-config-next": "^15",
    "eslint-plugin-storybook": "^10.1.11",
    "favicons": "^7.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "remark-frontmatter": "^5.0.0",
    "remark-mdx-frontmatter": "^5.2.0",
    "sharp": "0.34.3",
    "storybook": "^10.1.11",
    "ts-node": "^10.9.2",
    "turndown": "^7.2.2",
    "vfile": "^6.0.3",
    "zod": "^4.2.1"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
